{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "pnpm --filter server start",
    "client:dev": "pnpm --filter client dev",
    "server:dev": "pnpm --filter server dev",
    "server:prod": "pnpm --filter server prod",
    "test": "vitest",
    "dev": "concurrently --names \"backend\" -c \"bgBlue.bold,bgGreen.bold\" \"cross-env NODE_ENV=dev node --watch -r dotenv/config index.js\"",
    "prod": "concurrently --names \"backend\" -c \"bgBlue.bold,bgGreen.bold\" \"cross-env NODE_ENV=prod node --watch -r dotenv/config index.js\"",
    "tables:create:prod": "NODE_ENV=prod node -r dotenv/config src/db/tables.js",
    "tables:create:dev": "cross-env NODE_ENV=dev node -r dotenv/config src/db/tables.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "clsx": "^2.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "ky": "^1.10.0",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.3",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "concurrently": "^9.1.2",
    "cross-env": "^10.0.0",
    "dotenv": "^17.2.2",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "supabase": "^2.39.2",
    "supertest": "^7.1.4",
    "vitest": "^3.2.4"
  }
}
