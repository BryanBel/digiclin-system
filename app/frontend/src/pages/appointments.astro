---
import Layout from '../layouts/Layout.astro';
import AuthProtected from '../features/auth/AuthProtected.astro';
import AppointmentsComponent from '../components/AppointmentsComponent.jsx';
import { CalendarDaysIcon } from '@heroicons/react/24/outline'; // Import the icon
---
<Layout>
  <main class="min-h-[calc(100vh-4rem)] bg-gradient-to-br from-green-100 via-green-300 to-green-500 p-4">
    <div class="max-w-7xl mx-auto py-10 px-4">
      <h1 class="text-4xl font-extrabold mb-10 flex items-center gap-3 text-green-900 drop-shadow-lg">
        <CalendarDaysIcon className="h-14 w-14 text-green-700" />
        Gesti√≥n de Citas
      </h1>
      <button class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition">+ Nueva Cita</button>
      <AuthProtected>
        <AppointmentsComponent client:load />
      </AuthProtected>
    </div>
  </main>
</Layout>