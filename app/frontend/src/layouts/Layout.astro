---
const { title } = Astro.props;
import '../styles/global.css'    
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title || 'DigiClin'}</title>
	</head>
	<body>
			<nav class="bg-blue-700 text-white px-8 py-4 shadow-lg flex items-center justify-between">
				<div class="flex items-center gap-3">
					<span class="text-2xl font-bold tracking-wide">DigiClin</span>
				</div>
				<div class="flex gap-6 text-lg">
					<a href="/" class="hover:text-blue-200 transition">Dashboard</a>
					<a href="/patients" class="hover:text-blue-200 transition">Pacientes</a>
					<a href="/appointments" class="hover:text-blue-200 transition">Citas</a>
					<a href="/doctors" class="hover:text-blue-200 transition">Doctores</a>
				</div>
			</nav>
			<main>
				<slot />
			</main>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
