
---
// Represents a single patient in the list.
export interface Props {
  id: string;
  name: string;
}

const { id, name } = Astro.props;
---

<li id={id} class="flex justify-between items-center p-4 border-b border-gray-200">
  <div>
    <span class="patient-name font-semibold">{name}</span>
  </div>
  <div class="flex gap-2">
    <button class="edit-btn p-2 hover:bg-gray-200 rounded">Edit</button>
    <button class="delete-btn p-2 hover:bg-red-200 rounded">Delete</button>
  </div>
</li>
