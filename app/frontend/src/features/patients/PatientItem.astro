---
// Est es una paciente de la lista de pacientes.
export interface Props {
  id: string;
  name: string;
}

const { id, name } = Astro.props;
---

<li id={id} class="flex justify-between items-center p-4 border-b border-gray-200">
  <div>
    <a href={`/patients/${id}`} class="patient-name font-semibold text-blue-600 hover:underline">
      {name}
    </a>
  </div>
  <div class="flex gap-2">
    <button class="edit-btn p-2 hover:bg-gray-200 rounded">Editar</button>
    <button class="delete-btn p-2 hover:bg-red-200 rounded">Borrar</button>
  </div>
</li>